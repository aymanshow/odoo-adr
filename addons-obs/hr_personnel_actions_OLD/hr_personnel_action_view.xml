                                <field name="actual_wage"  attrs="{'readonly':[('states','!=','draft')]}"/>
                                <field name="actual_diff_scale" attrs="{'readonly':[('states','!=','draft')]}"/>
                                <field name="actual_total"  attrs="{'readonly':[('states','!=','draft')]}"/>
